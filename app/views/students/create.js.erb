function refreshForm(innerHTML) {
  const newStudentForm = document.getElementById('new_form_spot');
  newStudentForm.innerHTML = innerHTML;
}

function addStudent(studentHTML) {
  const students = document.getElementById('students');
  students.insertAdjacentHTML('beforeend', studentHTML);
}

addStudent('<%= j render "show", student: @student %>');
refreshForm('<%= j render "new_form", student: Student.new %>');


